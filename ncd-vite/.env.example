# NCD Management System - Environment Configuration
# Copy this file to .env and update the values for your deployment

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API Base URL (recommended for production)
VITE_API_BASE_URL=https://your-api-domain.com/api

# =============================================================================
# SMS CONFIGURATION
# =============================================================================

# SMS Provider Options: 'twilio', 'textlocal', 'custom'
VITE_SMS_PROVIDER=twilio

# Twilio Configuration
VITE_SMS_API_KEY=your_twilio_account_sid
VITE_SMS_API_SECRET=your_twilio_auth_token
VITE_SMS_FROM_NUMBER=+1234567890

# TextLocal Configuration (Alternative)
# VITE_SMS_API_KEY=your_textlocal_api_key
# VITE_SMS_FROM_NUMBER=TXTLCL

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# Email Provider Options: 'sendgrid', 'ses', 'custom'
VITE_EMAIL_PROVIDER=sendgrid

# SendGrid Configuration
VITE_EMAIL_API_KEY=your_sendgrid_api_key
VITE_EMAIL_FROM=noreply@yourcompany.com
VITE_EMAIL_FROM_NAME=NCD Management System

# AWS SES Configuration (Alternative)
# VITE_EMAIL_PROVIDER=ses
# VITE_AWS_ACCESS_KEY_ID=your_aws_access_key
# VITE_AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# VITE_AWS_REGION=us-east-1

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Environment
VITE_APP_ENV=production

# Company Information
VITE_COMPANY_NAME=Your Company Name
VITE_COMPANY_LOGO_URL=/logo_lf_ncd.svg

# Security Configuration
VITE_SESSION_TIMEOUT=3600000
VITE_ENABLE_AUDIT_LOGS=true

# =============================================================================
# DATABASE CONFIGURATION (if using backend API)
# =============================================================================

# These would be used in your backend API, not in the frontend
# DATABASE_URL=postgresql://username:password@localhost:5432/ncd_db
# REDIS_URL=redis://localhost:6379

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# For Vercel deployment
# VERCEL_URL will be automatically set by Vercel

# For custom domain
# VITE_CUSTOM_DOMAIN=https://ncd.yourcompany.com

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Only for development - remove in production
# VITE_DEBUG_MODE=true
# VITE_MOCK_API=false